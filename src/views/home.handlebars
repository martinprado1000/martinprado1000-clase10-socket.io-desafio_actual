<div class="mx-3">

<h3>View Home, no trabaja con socket.io</h3>
<hr>

<table class="table table-sm table-dark" id="tableProducts">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titulo</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
      <th scope="col">Code</th>
      <th scope="col">Categoria</th>
      <th scope="col">Cantidad</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr id="celda">
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.price}}</td>
        <td>{{this.thumbnail}}</td>
        <td>{{this.code}}</td>
        <td>{{this.category}}</td>
        <td>{{this.stock}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

</div>

